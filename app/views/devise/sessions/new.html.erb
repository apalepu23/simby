<div id="sign-in-panel">
	<h2 class="sign-in-header">Hey! Let's get started!</h2>

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, :required => false, :autofocus => true, input_html: { :class => "sign-in-input"}, :label => false, :placeholder => "email" %>
	    <%= f.input :password, :required => false, input_html: { :class => "sign-in-input"}, :label => false, :placeholder => "password" %>
	  </div>
	  <br />
	  <div class="form-actions">
	    <%= f.button :submit, "Sign in", :class => "btn btn-success sign-in-button" %>
	  </div>
	<% end %>
	<h3 class="sign-in-header">--OR--</h3>
	<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "sign-in-button btn btn-primary" %>
	<br />
	<br />
	<%= render "devise/shared/links" %>
</div>